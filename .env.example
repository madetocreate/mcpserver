# MCP Server Environment Variables
# Copy this file to .env and fill in your values

# Server Configuration
MCP_SERVER_HOST=127.0.0.1
MCP_SERVER_PORT=9000

# Security
MCP_SERVER_TOKEN=your-mcp-server-token-here
BACKEND_INTERNAL_API_KEY=your-internal-api-key-here
# Alternative name for internal API key
# INTERNAL_API_KEY=your-internal-api-key-here

# CORS Configuration
MCP_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4000

# Tool Configuration
MCP_TOOL_PROFILE=core

# Optional: Pinned Tools Hash (for security)
# PINNED_TOOLS_HASH=

# Optional: Environment Detection
# ENVIRONMENT=development
# APP_ENV=development
# NODE_ENV=development
